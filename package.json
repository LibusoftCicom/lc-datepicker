    "build:library": "ng test lc-datepicker-library && ng build lc-datepicker-library --configuration production && npm run copy:files && npm run build:git:demo",
    "build:publish:public": "npm publish dist/lib/ --access public --tag=latest"
  },
  "private": true,
  "eslintIgnore": [
    "*.spec.ts"
  ],
