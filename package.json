{
  "name": "@libusoftcicom/lc-datepicker",
  "version": "1.1.0",
  "description": "LC DatePicker - Pure Angular date and time picker component.",
  "homepage": "https://github.com/LibusoftCicom/lc-datepicker",
  "bugs": "https://github.com/LibusoftCicom/lc-datepicker/issues",
  "license": "MIT",
  "keywords": [
    "datepicker",
    "timepicker",
    "datetimepicker",
    "calendar",
    "angular",
    "angular 2",
    "angular 4",
    "angular 5"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LibusoftCicom/lc-datepicker.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --base-href /",
    "build": "ng build --base-href /",
    "test": "ng test --base-href /",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "clean": "rm -rf dist",
    "build:library": "nglb --tsconfig tsconfig-ngc.json --rootDir src/lib --outDir lib-dist",
    "build:dist": "ng build --prod --aot --base-href /lc-datepicker/",
    "build:publish": "npm run build:dist  && npm run build:library"
  },
  "main": "./lib-dist/lc-date-picker.module.js",
  "module": "./lib-dist/lc-date-picker.module.js",
  "types": "./lib-dist/lc-date-picker.module.d.ts",
  "dependencies": {
    "font-awesome": "4.7.0",
    "moment": "^2.19.2"
  },
  "devDependencies": {
    "@angular/animations": "5.0.1",
    "@angular/cli": "1.5.0",
    "@angular/common": "5.0.1",
    "@angular/compiler": "5.0.1",
    "@angular/compiler-cli": "5.0.1",
    "@angular/core": "5.0.1",
    "@angular/forms": "5.0.1",
    "@angular/http": "5.0.1",
    "@angular/language-service": "5.0.1",
    "@angular/platform-browser": "5.0.1",
    "@angular/platform-browser-dynamic": "5.0.1",
    "@angular/router": "5.0.1",
    "@types/jasmine": "2.8.0",
    "@types/node": "8.0.51",
    "angular-library-builder": "1.6.3",
    "codelyzer": "4.0.1",
    "core-js": "2.5.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.0",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "postcss": "6.0.14",
    "protractor": "5.2.0",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "typescript": "2.6.1",
    "bootstrap": "4.0.0-alpha.6"
  }
