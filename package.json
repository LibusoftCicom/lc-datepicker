  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "npm run eslint",
    "eslint": "eslint ./src/**/*.ts ./projects/libusoftcicom/lc-datepicker/src/**/*.ts",
